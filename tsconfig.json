{
  "compilerOptions": {
    "noImplicitAny": true,
    "jsx": "react",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* The 'baseUrl' enables absolute imports.
       For the IDE, a change in .eslintrc is also needed */
    "baseUrl": "src"
  },
  "include": [
    "src"
  ]
}
